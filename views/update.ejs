<!DOCTYPE html>
<html lang="en">
<% include ../views/head %>

<body>

<% include ../views/nav %>

<div class="container topmargin">
  <div class="container-top">
    <h4>Update image</h4>
  </div>


    <div class="container">
      <div class="row">
        <div class="col-xs-6 addform margin-right">


      <form method="post" action="">
        <div class="form-group row">
          <label for="category" class="col-sm-2 col-form-label col-form-label-sm">Category</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" id="category"  name="category" value="<%= data.category %>">
          </div>
        </div>
        <div class="form-group row">
          <label for="title" class="col-sm-2 col-form-label col-form-label-sm">Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" id="title"  name="title" value="<%= data.title %>">
          </div>
        </div>
        <div class="form-group row">
          <label for="desc" class="col-sm-2 col-form-label col-form-label-sm">Description</label>
          <div class="col-sm-10">
            <textarea class="form-control form-control-sm" id="desc" rows="3" placeholder="details" name="details" ><%= data.description %></textarea>
          </div>
        </div>




        <div class="btn-toolbar">

          <button type="submit" class="btn btn-secondary btn-sm float-right">Update</button>
          <button type="button" class="btn btn-outline-danger btn-sm float-right" id="delete" data-id="<%= data._id %>">Delete</button>

      </div>

      </form>
    </div>

    <div class="col-xs-6">
      <div id="image" class="formside">
        <img src="/images/<%= data.thumbnail %>" />
      </div>
    </div>


    </div>
  </div>
</div>

<% include ../views/scripts %>

<script src="/javascripts/update.js"></script>

</body>
</html>
